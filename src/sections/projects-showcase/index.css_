#worked-on, #lightbox {
    background: var(--almost-white);
    padding-bottom: 8rem;
}

#worked-on__title {
    text-align: center;
}





#lightbox {
    display: none;
}

#lightbox .image-container {
    border-left: .4rem solid royalblue;
    padding: 1rem;
    background: linear-gradient(-90deg, transparent, rgba(0, 0, 0, .2));
    text-align: center;
    margin: 1rem 0;
}

#lightbox .image-container img {
    padding: .4rem;
    background: royalblue;
}

