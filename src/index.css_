/*  TitleÂ´s font */
@import url('https://fonts.googleapis.com/css2?family=Inknut+Antiqua:wght@300;400&display=swap');
/* Text font */
@import url('https://fonts.googleapis.com/css2?family=Hind+Siliguri:wght@400;700&family=Montserrat&display=swap');

* {
    font-family: 'Montserrat', sans-serif;
    margin: 0;
    box-sizing: border-box;
    text-decoration: none;
}

body {
    background: var(--jet);
}

h1, h2, h3, h4, h5, h6 {
    font-family: 'Inknut Antiqua', serif;
    line-height: 1;
}

h1 {
	font-size: 2rem;
}

h2 {
	font-size: 1.8rem;
}

h3 {
	font-size: 1.6rem;
}

h4 {
	font-size: 1.4rem;
}



a:link {
    color: white;
    background: royalblue;
    padding: 0 .4rem;
}

a:visited {
    color: var(--text);
}



:root {
    --jet: #0A0A0A;
    --text: #222222;
    --almost-white: #EEEEEE;
    --gum: #FF80EA;
    --sparkle: #12F8D5;
    --bluish: #1FCBFF;
    --haulm: #FFD080;
    
    --content: 4rem;
}



/*          Custom scrollbar         */
::-webkit-scrollbar {
    width: .6rem;
}

::-webkit-scrollbar-track {
    background: var(--jet);
}

::-webkit-scrollbar-thumb {
    background: #666;
}

::-webkit-scrollbar-thumb:hover {
  background: #7A7A7A;
}






/*      Media querys        */
@media screen and (max-width: 991px) {
    * {
        font-size: 12px;
    }
}



@media screen and (max-width: 768px) {
    :root {
        --content: 1rem;
    }
}